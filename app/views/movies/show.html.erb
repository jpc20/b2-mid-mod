<h1>
  <%= @movie.title %>
</h1>

<h2>
  <%= @movie.year %> <br>
  <%= @movie.genre %>
</h2>

<ul class="actors-list">
  Actors:
  <% @movie.actors.order_by_age.each do |actor| %>
  <li><%= actor.name %></li>
  <% end %>
  Average Age: <%= @movie.actors.average_age %>
</ul>

<section class="new-actor-form">
  <h3>New Actor: </h3>
   <%= form_tag "/movies/#{@movie.id}", method: :post do %>
     <%= label_tag :name %>
     <%= text_field_tag :name %>
     <%= submit_tag :submit %>
   <% end %>
</section>
